{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "ignoreChanges": ["*.md", "test/**"],
      "message": "chore(release): publish"
    }
  },
  "packages": ["packages/*"],
  "stream": true
}
